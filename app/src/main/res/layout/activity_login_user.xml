<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginUser"
    android:orientation="vertical"
    android:background="@color/khaki"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_above="@+id/loginUser"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo" />


    <EditText
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:hint="Email"
        android:background="@drawable/custom_input"
        android:id="@+id/loginUser"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress" />

        <EditText
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:layout_below="@+id/loginUser"
            android:drawablePadding="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/passwordUser"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />



    <Button
        android:id="@+id/btn_login_user"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN AS USER"
        android:layout_below="@+id/passwordUser"/>

    <TextView
        android:id="@+id/txt_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:text="New User?"
        android:layout_below="@+id/btn_login_user"
        android:layout_marginLeft="80dp"/>

    <Button
        android:id="@+id/btn_regist_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/btn_login_user"
        android:text="REGISTER HERE"/>

</RelativeLayout>